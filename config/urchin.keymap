#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <behaviors/unicode.dtsi>

// Definición de capas
#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3
#define SPANISH 4

// Home row mods configuración
&mt {
    flavor = "balanced";
    tapping-term-ms = <200>;
    quick-tap-ms = <175>;
    require-prior-idle-ms = <150>;
};

&lt {
    flavor = "balanced";
    tapping-term-ms = <200>;
    quick-tap-ms = <175>;
};

// Configuración de Unicode para Linux (IBus)
&uc {
    default-mode = <UC_MODE_LINUX>;
};

/ {
    // Macros eliminadas - ahora usamos Unicode nativo con &uc

    behaviors {
        // Home row mods para mejor typing
        hml: homerow_mods_left {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS_LEFT";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <250>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <5 6 7 8 9 15 16 17 18 19 25 26 27 28 29 30 31 32 33>;
            hold-trigger-on-release;
        };

        hmr: homerow_mods_right {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS_RIGHT";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <250>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <0 1 2 3 4 10 11 12 13 14 20 21 22 23 24 30 31 32 33>;
            hold-trigger-on-release;
        };
    };

    combos {
        compatible = "zmk,combos";

        // ═══════════════════════════════════════════════════════════
        // UTILIDADES (acceso rápido)
        // ═══════════════════════════════════════════════════════════

        // ESC - Salir de modos (vim, etc)
        combo_esc {
            timeout-ms = <50>;
            key-positions = <16 17>;  // J+K
            bindings = <&kp ESC>;
            layers = <BASE>;
        };

        // TAB - Indentación y navegación
        combo_tab {
            timeout-ms = <50>;
            key-positions = <1 2>;  // W+E
            bindings = <&kp TAB>;
            layers = <BASE>;
        };

        // CAPS WORD - Mayúsculas temporales
        combo_capsword {
            timeout-ms = <50>;
            key-positions = <13 16>;  // F+J (ambos shifts)
            bindings = <&caps_word>;
            layers = <BASE>;
        };

        // ═══════════════════════════════════════════════════════════
        // COMILLAS (mano izquierda, posiciones análogas)
        // ═══════════════════════════════════════════════════════════

        // ' - Comilla simple (strings, atributos)
        combo_single_quote {
            timeout-ms = <50>;
            key-positions = <10 11>;  // A+S
            bindings = <&kp SQT>;
            layers = <BASE LOWER RAISE>;
        };

        // " - Comilla doble (strings)
        combo_double_quote {
            timeout-ms = <50>;
            key-positions = <20 21>;  // Z+X
            bindings = <&kp DQT>;
            layers = <BASE LOWER RAISE>;
        };

        // ═══════════════════════════════════════════════════════════
        // ÁNGULOS (mano derecha, posiciones análogas)
        // ═══════════════════════════════════════════════════════════

        // < - HTML tags, comparaciones
        combo_less_than {
            timeout-ms = <50>;
            key-positions = <17 18>;  // K+L
            bindings = <&kp LT>;
            layers = <BASE LOWER RAISE>;
        };

        // > - HTML tags, comparaciones
        combo_greater_than {
            timeout-ms = <50>;
            key-positions = <27 28>;  // ,+.
            bindings = <&kp GT>;
            layers = <BASE LOWER RAISE>;
        };

        // ═══════════════════════════════════════════════════════════
        // GUIONES (mano izquierda centro, posiciones análogas)
        // ═══════════════════════════════════════════════════════════

        // - (minus) - kebab-case, operador
        combo_minus {
            timeout-ms = <50>;
            key-positions = <11 12>;  // S+D
            bindings = <&kp MINUS>;
            layers = <BASE LOWER RAISE>;
        };

        // _ (underscore) - snake_case
        combo_underscore {
            timeout-ms = <50>;
            key-positions = <21 22>;  // X+C
            bindings = <&kp UNDER>;
            layers = <BASE LOWER RAISE>;
        };

        // ═══════════════════════════════════════════════════════════
        // SÍMBOLOS DE PROGRAMACIÓN
        // ═══════════════════════════════════════════════════════════

        // = - Asignaciones, comparaciones
        combo_equal {
            timeout-ms = <50>;
            key-positions = <12 13>;  // D+F
            bindings = <&kp EQUAL>;
            layers = <BASE LOWER RAISE>;
        };

        // + - Operador matemático, concatenación
        combo_plus {
            timeout-ms = <50>;
            key-positions = <13 14>;  // F+G
            bindings = <&kp PLUS>;
            layers = <BASE LOWER RAISE>;
        };

        // : - JSON, CSS, objetos
        combo_colon {
            timeout-ms = <50>;
            key-positions = <2 3>;  // E+R
            bindings = <&kp COLON>;
            layers = <BASE LOWER RAISE>;
        };

        // ~ - Regex, paths, aproximaciones
        combo_tilde {
            timeout-ms = <50>;
            key-positions = <0 1>;  // Q+W
            bindings = <&kp TILDE>;
            layers = <BASE LOWER RAISE>;
        };

        // ` - Template literals (JS), markdown
        combo_backtick {
            timeout-ms = <50>;
            key-positions = <3 4>;  // R+T
            bindings = <&kp GRAVE>;
            layers = <BASE>;
        };

    };

    keymap {
        compatible = "zmk,keymap";

        // ╔═══════════════════════════════════════════════════════════╗
        // ║                    CAPA BASE (QWERTY)                     ║
        // ╠═══════════════════════════════════════════════════════════╣
        // ║  Q     W     E     R     T      Y     U     I     O     P ║
        // ║  A     S     D     F     G      H     J     K     L     ; ║
        // ║ (CTRL)(ALT)(GUI)(SHFT)         (sin mods en mano derecha) ║
        // ║  Z     X     C     V     B      N     M     ,     .     / ║
        // ║            ESC   BSPC          RET   SPC                  ║
        // ║           (LOW)               (SHFT)(RAIS)                ║
        // ╚═══════════════════════════════════════════════════════════╝
        
        base_layer {
            label = "BASE";
            bindings = <
        // ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
             &kp Q         &kp W         &kp E         &kp R         &kp T             &kp Y         &kp U         &kp I         &kp O         &kp P
        // ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
             &hml LCTRL A  &hml LALT S   &hml LGUI D   &hml LSHFT F  &kp G             &kp H         &kp J         &kp K         &kp L         &kp SEMI
        // ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
             &kp Z         &kp X         &kp C         &kp V         &kp B             &kp N         &kp M         &kp COMMA     &kp DOT       &kp FSLH
        // ╰─────────────┴─────────────┴─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┴─────────────┴─────────────╯
                                         &lt LOWER ESC &kp BSPC                        &mt LSHFT RET &lt RAISE SPACE
        //                                             ╰─────────────┴─────────────╯   ╰─────────────┴─────────────╯
            >;
        };

        // ╔═══════════════════════════════════════════════════════════╗
        // ║         CAPA LOWER (Números y Símbolos de Código)         ║
        // ╠═══════════════════════════════════════════════════════════╣
        // ║  1     2     3     4     5      6     7     8     9     0  ║
        // ║  (     {     [     $     %      ^     ]     }     )     !  ║
        // ║  `     ~     @     #     -      =     *     &     \     |  ║
        // ║            ___   DEL          SPANISH ADJ                  ║
        // ║                                                             ║
        // ║ BRACKETS SIMÉTRICOS: Izq abre ( { [ | Der cierra ] } )     ║
        // ╚═══════════════════════════════════════════════════════════╝

        lower_layer {
            label = "LOWER";
            bindings = <
        // ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
             &kp N1        &kp N2        &kp N3        &kp N4        &kp N5            &kp N6        &kp N7        &kp N8        &kp N9        &kp N0
        // ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
             &kp LPAR      &kp LBRC      &kp LBKT      &kp DLLR      &kp PRCNT         &kp CARET     &kp RBKT      &kp RBRC      &kp RPAR      &kp EXCL
        // ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
             &kp GRAVE     &kp TILDE     &kp AT        &kp HASH      &kp MINUS         &kp EQUAL     &kp STAR      &kp AMPS      &kp BSLH      &kp PIPE
        // ╰─────────────┴─────────────┴─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┴─────────────┴─────────────╯
                                         &trans        &kp DEL                         &mo SPANISH   &mo ADJUST
        //                                             ╰─────────────┴─────────────╯   ╰─────────────┴─────────────╯
            >;
        };

        // ╔═══════════════════════════════════════════════════════════╗
        // ║         CAPA RAISE (Navegación y Funciones)               ║
        // ╠═══════════════════════════════════════════════════════════╣
        // ║  TAB   F2    F3    F4    F5     F6    F7    F8    F9   F10 ║
        // ║ CTRL  ALT   GUI  SHFT   F11    LEFT  DOWN   UP  RIGHT  F12 ║
        // ║ UNDO  CUT  COPY PASTE REDO    HOME  PGDN  PGUP  END   INS  ║
        // ║            ADJ   ___          SPANISH ___                  ║
        // ║                                                             ║
        // ║ Navegación estilo Neovim (flechas) en home row derecha     ║
        // ╚═══════════════════════════════════════════════════════════╝

        raise_layer {
            label = "RAISE";
            bindings = <
        // ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
             &kp TAB       &kp F2        &kp F3        &kp F4        &kp F5            &kp F6        &kp F7        &kp F8        &kp F9        &kp F10
        // ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
             &kp LCTRL     &kp LALT      &kp LGUI      &kp LSHFT     &kp F11           &kp LEFT      &kp DOWN      &kp UP        &kp RIGHT     &kp F12
        // ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
             &kp LC(Z)     &kp LC(X)     &kp LC(C)     &kp LC(V)     &kp LC(Y)         &kp HOME      &kp PG_DN     &kp PG_UP     &kp END       &kp INS
        // ╰─────────────┴─────────────┴─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┴─────────────┴─────────────╯
                                         &mo ADJUST    &trans                          &mo SPANISH   &trans
        //                                             ╰─────────────┴─────────────╯   ╰─────────────┴─────────────╯
            >;
        };

        // ╔═══════════════════════════════════════════════════════════╗
        // ║         CAPA ADJUST (Sistema y Media)                     ║
        // ╠═══════════════════════════════════════════════════════════╣
        // ║ BT0   BT1   BT2   BT3   BT4    BTCLR  ___   ___   ___  ___ ║
        // ║ BOOT  ___   ___   ___  OUT_T  VOL-  VOL+  PREV  NEXT PLAY  ║
        // ║  ___   ___   ___   ___   ___   MUTE  BRI-  BRI+   ___  ___  ║
        // ║            ___   ___           ___   ___                   ║
        // ╚═══════════════════════════════════════════════════════════╝

        adjust_layer {
            label = "ADJUST";
            bindings = <
        // ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮   ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
             &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4      &bt BT_CLR    &none         &none         &none         &none
        // ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
             &bootloader   &none         &none         &none         &out OUT_TOG      &kp C_VOL_DN  &kp C_VOL_UP  &kp C_PREV    &kp C_NEXT    &kp C_PP
        // ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤
             &none         &none         &none         &none         &none             &kp C_MUTE    &kp C_BRI_DN  &kp C_BRI_UP  &none         &none
        // ╰─────────────┴─────────────┴─────────────┼─────────────┼─────────────┤   ├─────────────┼─────────────┼─────────────┴─────────────┴─────────────╯
                                         &trans        &trans                          &trans        &trans
        //                                             ╰─────────────┴─────────────╯   ╰─────────────┴─────────────╯
            >;
        };

        // ╔═══════════════════════════════════════════════════════════╗
        // ║         CAPA SPANISH (Acentos españoles)                  ║
        // ╠═══════════════════════════════════════════════════════════╣
        // ║  ___   ___    é    ___   ___     ___    ú     í    ó    ___ ║
        // ║   á    ___   ___   ___   ___     ___   ___   ___   ___   ___ ║
        // ║  ___   ___   ___   ___   ___      ñ    ___   ___   ___   ___ ║
        // ║            ___   ___          [HELD]  ___                  ║
        // ║                                                             ║
        // ║ UNICODE NATIVO - Funciona con layout US estándar           ║
        // ║ Con Shift: Á É Í Ó Ú Ñ (mayúsculas automáticas)            ║
        // ║ Requiere: IBus habilitado en Linux (Ctrl+Shift+U)          ║
        // ╚═══════════════════════════════════════════════════════════╝

        spanish_layer {
            label = "SPANISH";
            bindings = <
        // ╭───────────────┬───────────────┬───────────────┬───────────────┬───────────────╮   ╭───────────────┬───────────────┬───────────────┬───────────────┬───────────────╮
             &trans          &trans          &uc 0xE9 0xC9   &trans          &trans              &trans          &uc 0xFA 0xDA   &uc 0xED 0xCD   &uc 0xF3 0xD3   &trans
        // ├───────────────┼───────────────┼───────────────┼───────────────┼───────────────┤   ├───────────────┼───────────────┼───────────────┼───────────────┼───────────────┤
             &uc 0xE1 0xC1   &trans          &trans          &trans          &trans              &trans          &trans          &trans          &trans          &trans
        // ├───────────────┼───────────────┼───────────────┼───────────────┼───────────────┤   ├───────────────┼───────────────┼───────────────┼───────────────┼───────────────┤
             &trans          &trans          &trans          &trans          &trans              &uc 0xF1 0xD1   &trans          &trans          &trans          &trans
        // ╰───────────────┴───────────────┴───────────────┼───────────────┼───────────────┤   ├───────────────┼───────────────┼───────────────┴───────────────┴───────────────╯
                                             &trans          &trans                              &trans          &trans
        //                                                   ╰───────────────┴───────────────╯   ╰───────────────┴───────────────╯
            >;
        };
    };
};
